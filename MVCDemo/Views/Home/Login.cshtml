@page
@model MVCDemo.Models.LoginModel

<h1>Login</h1>
<p >
    <form method="post" asp-controller="User" asp-action="checkLogin" style="width:50%">
        <div class="form-group">
            <label for="txtname" class="control-label">Email</label>
            <input id="txtname" name="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label for="txtemail" class="control-label">Password</label>
            <input id="txtemail" type="password" name="Password" class="form-control" />
        </div>
        <div class="form-group mt-2">
            <input type="submit" value="Login" class="btn btn-primary" />
        </div>
        <div>
            Not yet have an account? <a asp-action="Register">Register here!</a>
        </div>
    </form>
</p>
