@page
@model MVCDemo.Models.LoginModel
@{
    string? error = TempData["ErrorMessage"] as string;
}
<h1>Register</h1>
<h3 style="color:red">@error</h3>
<p >
    <form method="post" asp-controller="User" asp-action="Register" style="width:50%">
        <div class="form-group">
            <label for="txtemail" class="control-label">Name</label>
            <input id="txtemail" name="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label for="txtemail" class="control-label">Phone Number</label>
            <input id="txtemail" name="Phone" class="form-control" />
        </div>
        <div class="form-group">
            <label for="txtname" class="control-label">Email</label>
            <input id="txtname" name="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label for="txtemail" class="control-label">Password</label>
            <input id="txtemail" type="password" name="Password" class="form-control" />
        </div>
        <div class="form-group">
            <label for="txtemail" class="control-label">Confirm Password</label>
            <input id="txtemail" type="password" name="CfmPassword" class="form-control" />
        </div>
        <div class="form-group mt-2">
            <input type="submit" value="Register" class="btn btn-primary" />
        </div>
        <div>
            Already have an account? <a asp-action="Login">Login here!</a>
        </div>
    </form>
</p>
