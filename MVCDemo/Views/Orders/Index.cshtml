@model IEnumerable<MVCDemo.Models.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                User Name
            </th>
            <th>
                Total
            </th>
            <th>
                Created At
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.User.Name
                </td>
                <td class="price">
                    @item.Total
                </td>
                <td>
                    @item.CreatedDate
                </td>
                <td>
                    @item.Status
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">View</a> |
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    let x = document.querySelectorAll(".price");
    for (let i = 0, len = x.length; i < len; i++) {
        let num = Number(x[i].innerHTML)
            .toLocaleString('vi');
        x[i].innerHTML = num;
        x[i].classList.add("currSign");
    }
</script>